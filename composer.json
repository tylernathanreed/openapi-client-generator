{
    "name": "reedware/openapi-client-generator",
    "description": "Generates HTTP API Clients based on JSON Scheam / OpenAPI specs",
    "keywords": [
        "open",
        "api",
        "openapi",
        "http"
    ],
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "reedware/openapi-client": "dev-master"
    },
    "require-dev": {
        "laravel/pint": "^1.20",
        "php-coveralls/php-coveralls": "^2.7",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5|^11.0|^12.0",
        "reedware/sail-lite": "^1.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0",
        "symfony/var-dumper": "^6.4.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Reedware\\OpenApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "bin": [
        "bin/openapi"
    ],
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test:lint": "pint",
        "test:static": "phpstan analyze",
        "test:suite": "XDEBUG_MODE=coverage phpunit",
        "test:coverage": [
            "@test:suite",
            "php-coveralls -v --dry-run"
        ],
        "test": [
            "@test:lint",
            "@test:static",
            "@test:coverage"
        ]
    }
}
